<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/basic.css' />
  <title>Mongoose Flights</title>
</head>
<body>
  <nav>
    <a href="/flights/new">Add Flight</a>
      <a href="/flights">All Flights</a>
      <a href="/tickets/new"> Add Ticket</a>
    </nav>
  <main>
  <h1>Flights List</h1>
  <table id="list">
    <thead>
      
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight No</th>
        <th>Departure Time</th>
      </tr>
    </thead>
    <tbody>
      <!-- Write the line of EJS to iterate over movies using forEach -->
      <!-- flights. comes from the controller index function -->
      <% flights.forEach(function(f) { %>
       
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td><%= f.departs %></td>
          <td><a href="/flights/<%=f._id%>" class="detail-button">DETAILS</a></td>
          
        </tr>
	<% }) %>
      <!-- Close the forEach using EJS here -->
    </tbody>
  </table>
</main>
</body>
</html>
